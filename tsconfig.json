{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx", "app/cypress/e2e/index.test.js", "app/cypress/e2e/index.test.js"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019","es2018",
      ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": false,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
